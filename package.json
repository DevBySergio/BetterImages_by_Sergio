{
  "name": "betterimagesbysergio",
  "displayName": "BetterImagesBySergio",
  "description": "Collection of tools for working with images",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "betterImages.processImage",
        "title": "Process with BetterImages",
        "icon": "$(device-camera)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterImagesSidebar",
          "title": "Better Images",
          "icon": "$(device-camera)"
        }
      ]
    },
    "views": {
      "betterImagesSidebar": [
        {
          "type": "webview",
          "id": "betterImages.toolboxView",
          "name": "Toolbox"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(png|jpe?g|svg|gif|webp|avif)$/i",
          "command": "betterImages.processImage",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "exifr": "^7.1.3",
    "sharp": "^0.34.5"
  }
}
