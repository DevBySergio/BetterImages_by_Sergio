{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "betterimages",
  "displayName": "BetterImagesBySergio",
  "description": "Collection of tools for working with images",
  "version": "1.3.0",
  "publisher": "DevBySergio",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevBySergio/BetterImages_by_Sergio"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "image",
    "optimization",
    "webp",
    "avif",
    "nextjs",
    "react",
    "crop"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "betterImages.processImage",
        "title": "Process with BetterImages",
        "icon": "$(device-camera)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterImagesSidebar",
          "title": "Better Images",
          "icon": "$(device-camera)"
        }
      ]
    },
    "views": {
      "betterImagesSidebar": [
        {
          "type": "webview",
          "id": "betterImages.toolboxView",
          "name": "Toolbox"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(png|jpe?g|svg|gif|webp|avif)$/i",
          "command": "betterImages.processImage",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "@img/sharp-darwin-arm64": "^0.34.5",
    "@img/sharp-darwin-x64": "^0.34.5",
    "@img/sharp-linux-x64": "^0.34.5",
    "@img/sharp-win32-x64": "^0.34.5",
    "exifr": "^7.1.3",
    "sharp": "^0.34.5"
  }
}
